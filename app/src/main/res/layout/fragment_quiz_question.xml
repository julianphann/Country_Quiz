<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Question Number -->
    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question: 1/6"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Question Text -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Question text goes here"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- RadioGroup for Answer Options -->
    <RadioGroup
        android:id="@+id/radio_group_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Option 1" />

        <RadioButton
            android:id="@+id/radio_button_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. Option 2" />

        <RadioButton
            android:id="@+id/radio_button_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. Option 3" />

    </RadioGroup>
</LinearLayout>
